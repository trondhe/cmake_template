{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build"
            ],
            "problemMatcher": []
        },
        {
            "label": "configure",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-GNinja",
                "-Bbuild",
                ".",
            ],
            "problemMatcher": []
        },
        {
            "label": "clean",
            "type": "shell",
            "linux": {
                "command": "rm",
                "args": [
                    "-r",
                    "build"
                ]
            },
            "windows": {
                "command": "rd",
                "args": [
                    "/S",
                    "/Q",
                    "build"
                ]
            },
            "problemMatcher": []
        }
    ]
}